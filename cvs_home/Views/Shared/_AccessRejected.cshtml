
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Application Access Rejected</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
</head>
<body>
    <div>&nbsp;</div>
    <div class="panel panel-success col-md-8">
