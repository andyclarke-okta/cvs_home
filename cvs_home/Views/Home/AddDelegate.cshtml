
@{
    ViewData["Title"] = "AddDelegation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div class="container">
    <h2 class="text-center ">Add Delegates</h2>
    <div class="row justify-content-md-center">

        <div class="col-md-6">
            <div class="card border-bottom">
                <div class="card-header  text-center ">Choose new people to delegate to</div>
                <div class="card-body">
                    <form action="/Home/AddDelegateRoute" method="post" id="addDelegation" class="form-horizontal">

                        <div class="form-group row">
                            <label for="searchCriteria" class="col-sm-2 col-form-label">Search Criteria</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="searchCriteria" name="searchCriteria" placeholder="Email">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button id="myB" type="submit" class="btn btn-primary">Submit</button>
                                <p>Input can be FirstName, LastName (if it is unambigious) or Email address </p>
                            </div>
                        </div>
                    </form>     
                </div>
            </div>
        </div>






    </div>
</div>
